{
  "rewrites": [
    {
      "source": "/en",
      "destination": "/index.html?lang=en"
    },
    {
      "source": "/es",
      "destination": "/index.html?lang=es"
    },
    {
      "source": "/en/(.*)",
      "destination": "/$1?lang=en"
    },
    {
      "source": "/es/(.*)",
      "destination": "/$1?lang=es"
    }
  ],
  "headers": [
    {
      "source": "/translations/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

